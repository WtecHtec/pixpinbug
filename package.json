{
  "name": "pixpinbug",
  "displayName": "Pixpinbug",
  "version": "0.0.1",
  "description": "Take a screenshot and paste it directly into the page. Quickly create visual bug reports, articles, or feedback notes.",
  "author": "sr7. <504105925@qq.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "antd": "^5.24.8",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "commands": {
      "take-screenshot": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "启动截图模式"
      }
    },
    "host_permissions": [
      "https://*/*",
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ]
  }
}
